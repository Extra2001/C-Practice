// https://code.visualstudio.com/docs/editor/tasks
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/exe/${fileBasenameNoExtension}.o",
                "-g",
                "-Wall",
                "-static-libgcc",
                "-fexec-charset=GBK"
            ],
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}